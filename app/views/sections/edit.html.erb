<h1> Edit your Section</h1>

<% if @section.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @section.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action='/sections/<%= @section.id %>' method='post'>
  <input name='_method' type='hidden' value='patch'>
  <label for='section_name'>Section Name</label>
  <input id='section_name' name='section[name]' type='text' value='<%= @section.name %>'>
  <button class='btn btn-success'>Update Section</button>
</form>

<h2>Choose a Lesson to add to this Section:</h2>
<div style="padding-bottom:20">
  <form id="sections" role="form" action="/sections" method="post">
    <h3>Lessons: <select form="lessons" name="lesson[section_id]" style="width:250px;margin-right:20px">
    <% @lessons.each do |lesson| %>
      <option value="<%=lesson.id %>"> <%= lesson.name %> </option>
    <% end %>
  </select></h3>
  <button class="btn btn-success">Add Lesson to Section</button>
</form>
</div>
<br></br>

<p><a href='/sections/<%= @section.id %>'
  data-confirm='Are you sure?'
  data-method='delete'
  rel='nofollow' class='btn btn-info'>Delete this Section</a></p>

<p><a href='/sections' class='btn btn-primary'>Return to Section Homepage</a></p>
